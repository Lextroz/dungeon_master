<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    android:background="@color/windowAppForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <ImageView
                android:id="@+id/imageForSignnIn"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/moon" />

            <!--<TextView
                android:id="@+id/textSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signIn"
                android:fontFamily="@font/marcellus_sc"
                android:textSize="25dp"
                android:textColor="@color/nameWindowAppForm"
                android:textAlignment="center"
                android:layout_marginTop="30dp"/>-->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/filds"
                android:fontFamily="@font/button_and_text"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:text=""
                android:textColor="@color/base_text_color"
                android:textColorHint="@color/for_input_text_color"
                android:textSize="20dp" />

                <!--app:met_floatingLabel="highlight"
                app:met_baseColor="@color/for_input_text_color"
                app:met_primaryColor="@color/ripple_effect"
                app:met_singleLineEllipsis="true"-->


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordField"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:text=""
                android:fontFamily="@font/button_and_text"
                android:textColor="@color/base_text_color"
                android:textColorHint="@color/for_input_text_color"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/filds"
                android:padding="15dp"

                />

            <!--app:met_floatingLabel="highlight"
                app:met_baseColor="@color/for_input_text_color"
                app:met_primaryColor="@color/ripple_effect"
                app:met_singleLineEllipsis="true"-->


            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_app_form"
                android:fontFamily="@font/button_and_text"
                android:onClick="onClickLogin"
                android:text="@string/btn_signIn"
                android:textColor="@color/button_text_color"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:fontFamily="@font/button_and_text"
                android:textColor="@color/base_text_color"
                android:textSize="16dp"
                android:onClick="onClickOpenRegistration"
                android:text="@string/registration"
                android:linksClickable="false"
                android:autoLink="all"/>

            <TextView
                android:id="@+id/textForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/button_and_text"
                android:text="@string/forget_password"
                android:textColor="@color/base_text_color"
                android:textSize="16dp"
                android:linksClickable="false"
                android:autoLink="all"/>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>