<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:clickable="true"
    android:orientation="vertical">


        <Button
            android:id="@+id/buttonTypicalCounter"
            android:text="@string/btn_TypicalCounter"
            android:onClick="onClickOpenTypicalCounters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@color/main_background"
            android:fontFamily="@font/button_and_text"
            android:textAlignment="center"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"



            />


        <Button
            android:id="@+id/buttonUniversalCounter"
            android:text="@string/btn_UniversalCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/button_text_color"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/button_and_text"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:background="@color/main_background"


            />



</LinearLayout>

